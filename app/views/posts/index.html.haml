.page-header
  = link_to new_post_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Post
  %h1 Listing posts

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Topic
        %th Content
        %th Inline images
        %th
        %th
        %th

    %tbody
      - @posts.each do |post|
        %tr
          %td= post.topic
          %td= post.content
          %td= post.inline_images
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :data => { confirm: 'Are you sure?' }, :method => :delete
